<Page x:Class="WindowsServicingGUI.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WindowsServicingGUI"
      mc:Ignorable="d" 
      d:DesignHeight="350" d:DesignWidth="525"
      Title="DiskClear">

    <Grid x:Name="DiskClear">
        <TextBlock x:Name="ClearingDiskTextBlock" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="58,29,0,0" Width="417" Height="35" Foreground="White" FontFamily="Segoe UI Semilight"><Run FontWeight="Bold" FontSize="20" Text="Freeing up disk space..."/></TextBlock>
        <Label x:Name="clearStatus" Content="Please wait..." HorizontalAlignment="Left" Margin="58,176,0,0" VerticalAlignment="Top" Foreground="White" FontSize="14" FontFamily="Segoe UI Semilight"/>
        <ProgressBar x:Name="clearStatusBar" HorizontalAlignment="Left" Height="11" Margin="58,220,0,0" VerticalAlignment="Top" Width="408" IsIndeterminate="True"/>

    </Grid>
</Page>
